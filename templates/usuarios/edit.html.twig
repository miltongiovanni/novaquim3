{% extends 'base.html.twig' %}

{% block title %}Editar usuario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sweetalert2') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('parsley') }}
    {{ encore_entry_script_tags('sweetalert2') }}
{% endblock %}

{% block content %}
    <h2 class="ps-3">Editar usuario</h2>

    {{ include('usuarios/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('usuarios') }}">Volver a la lista</a>
        </div>
    </div>
    {% if is_granted('ROLE_ADMINISTRADOR') and user.id!= app.user.id %}
        {{ include('usuarios/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
